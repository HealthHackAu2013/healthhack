extends ../layout

block content
  .container(ng-app='patientList', ng-controller='PatientListCtrl')
    table.table
      tr
        th UID
        th First Name
        th Last Name
        th Pre-consult Appointment
        th Post-consult Appointment
      tr(ng-repeat='p in patientData')
        td {{ p._id }}
        td {{ p.firstName }}
        td {{ p.lastName }}
        td {{ p.appointments[0].time | date:'medium' }}
        td {{ p.appointments[1].time | date:'medium' }}
        
  script(src='/javascripts/patientList/patientListCtrl.js')
